@model UserUpdateModel;

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <input type="hidden" value="@Model.UserId" id="userIdHidden" />
    @await Html.PartialAsync(
        "_TitleAndGoBackBtnPartial",
        new ViewDataDictionary(ViewData) { { "PageH1Title", "User Information" } })
    <form asp-action="Edit" asp-controller="User" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group col">
                <label asp-for="@Model.Email" class="control-label"></label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group col">
            </div>
        </div>
        <div class="row">
            <div class="form-group col">
                <label asp-for="@Model.FirstName" class="control-label"></label>
                <input asp-for="@Model.FirstName" class="form-control" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label asp-for="@Model.LastName" class="control-label"></label>
                <input asp-for="@Model.LastName" class="form-control" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col">
                <label asp-for="@Model.PhoneNumber" class="control-label"></label>
                <input asp-for="@Model.PhoneNumber" class="form-control" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label asp-for="@Model.RoleName" class="control-label"></label>
                <select asp-for="@Model.RoleName" class="form-control" value = "@Model.RoleName">
                    <option value="Boss">Boss</option>
                    <option value="Staff">Staff</option>
                </select>
                <span asp-validation-for="@Model.RoleName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-2">
            <input type="submit" value="Update user information" class="btn btn-primary btn-block" />
        </div>
    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/edit-todo-script.js" asp-append-version="true"></script>
}
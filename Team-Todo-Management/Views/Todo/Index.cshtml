@model IEnumerable<Team_Todo_Management.Models.Todo>

@{
    ViewData["Title"] = "Index";
}

 <div class="border-bottom">
    <h2>Today Tasks</h2>
    <small>@DateTime.Now.ToShortDateString()</small>
 </div>

 <div class="my-2">
     <!-- Button trigger modal -->
     <div class="float-right">
         <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createTaskModal">
             Create a task
         </button>
     </div>

     <!-- Modal -->
     <div class="modal fade" id="createTaskModal" tabindex="-1" aria-labelledby="createTaskModalLabel" aria-hidden="true">
         <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
             <div class="modal-content">
                 <div class="modal-header">
                     <h5 class="modal-title" id="createTaskModalLabel">Modal title</h5>
                     <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                         <span aria-hidden="true">&times;</span>
                     </button>
                 </div>
                 <div class="modal-body">
                     ...
                 </div>
                 <div class="modal-footer">
                     <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                     <button type="button" class="btn btn-primary">Save changes</button>
                 </div>
             </div>
         </div>
     </div>
 </div>
